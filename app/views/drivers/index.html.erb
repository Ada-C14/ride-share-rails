<h1> Driver list </h1>
<div>
  <%@drivers.each do |driver|%>
    <ul>
      <li><strong><%= link_to driver.name, driver_path(driver.id) %></strong> : <%= driver.vin%> | <%= link_to "Add a New Driver", new_driver_path%> | <%= link_to "Edit Driver", edit_driver_path(driver.id) %> | <%= link_to "Delete Driver", driver_path(driver.id), method: :delete, data: {confirm: "Are you sure?"} %> |</li>
    </ul>
  <%end%>
</div>


