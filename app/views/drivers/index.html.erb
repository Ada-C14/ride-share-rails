<%#index.html.erb%>


<div class="scroll-top"></div>

  <table>
    <div class="table-header">
      <thead>
      <tr>
        <th>ALL DRIVERS</th>
        <th>RATING</th>
        <th>STATUS</th>

        <th colspan="3"></th>
      </tr>
      </thead>
    </div>

    <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to driver.name, driver_path(driver), class: 'table-link' %></td>
        <td class="table-content"><%= driver.avg_rating %></td>
        <td>
          <% if driver.available%>
            <p class="table-content">Available</p>
          <% else %>
            <p class="table-content">Unavailable</p>
          <% end %>
        </td>
        <td><%= link_to "Edit", edit_driver_path(driver), class: 'table-link' %></td>
        <td class="table-link"><%= link_to "Delete", driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete #{driver.name}?"}, class: 'table-link'%><td>
      </tr>
    <% end %>
    </tbody>
  </table>


