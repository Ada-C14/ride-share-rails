<h1>Drivers</h1>

<div>
  <%= link_to "Add another driver", new_driver_path %>
</div>
<br>

<div class="flex-container">
  <% @drivers.each do |driver| %>
    <div class="flip-card">
      <div class="flip-card-inner">
        <div class="flip-card-front">
         <%= driver.name %>
        </div>
        <div class="flip-card-back">
          | <%= link_to "Show", driver_path(driver.id) %> | <br>
          | <%= link_to "Edit", edit_driver_path(driver) %> | <br>
          | <%= link_to "Delete", driver_path(driver.id), method: :delete,
                      data: {confirm: 'Are you sure you would like to delete?'} %> |
        </div>

      </div>
    </div>
  <% end %>
</div>
