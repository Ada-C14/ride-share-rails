<%# <h1>Drivers#index</h1>
<p>Find me in app/views/drivers/index.html.erb</p> %>


<% if @drivers.length > 0 %>
   <% @drivers.each do |driver|%>
    <ul>
        <li><%= driver.name %>  
            <ul>
                <li><%= link_to "Driver details", driver_path(driver.id) %></li>            
            </ul>
        </li>
    </ul>
    <% end %>
<% else %>
    <h3> No driver found! </h3>
<% end %>
