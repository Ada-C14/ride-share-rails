<h2> New driver page</h2>

<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @driver, class: 'create-driver' do |f| %>
  <p>Please provide the following driver details:</p>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :vin %>
    <%= f.text_field :vin %>
  </div>

  <div>
    <%= f.label :available %>
    <%= f.text_field :available %>
  </div>

  <%= f.submit "Save Driver", class: "driver-button" %>
<% end %>