<%#= render partial: "form", locals: { action_name: "Edit Driver", form_title: "Edit Driver"} %>

<h3> Edit Driver: </h3>
<%= form_with model: @driver, class: 'driver-form' do |f| %>
  <p> Please provide the following information to edit the driver in our database: </p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%#=f.select :driver_id, Trip.all.map{ |driver| [driver.name, driver.id]} %>
  </div>
  <div>
    <%= f.label :vin %>
    <%= f.text_field :vin %>
  </div>
  <div>
    <%= f.label :available %>
    <%= f.text_field :available %>
  </div>
  <%= f.submit "Edit Driver" %>
<% end %>

<ul>
  <% @driver.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
