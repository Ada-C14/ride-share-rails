<h2>Edit Driver</h2>

<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="edit-driver">
  <%= form_for @driver do |f| %>
    <%= f.label :name%>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :vin %>
    <br>
    <%= f.text_area :vin %>
    <br>
    <% # set availability by default %>
    <%= f.label :availability %>
    <br>
    <%= f.text_area :available %>
    <br>
    <%= f.submit %>
  <% end %>
</div>