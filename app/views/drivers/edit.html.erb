<h1>Edit Driver</h1>

<%= form_with model: @driver, class: 'edit-driver' do |f| %>
  <p>Please provide the following information to update your driver:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.label :available %>
  <%= f.text_field :available %>

  <%= f.submit "Save Changes", class: "driver-button" %>
<% end %>