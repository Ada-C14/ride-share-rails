<h4><%= link_to "Return to home", drivers_path %></h4>
<h1>Driver Details </h1>
<!--<p>Find me in app/views/drivers/show.html.erb</p>-->

<p><strong> Name:</strong> <%= @driver.name %> </p>
<p> <strong> Vin: </strong> <%= @driver.vin %> </p>
<p> <strong> Availability Status: </strong> <%= @driver.available %></p>

<br> <strong> Total Earnings: </strong><%= @driver.total_earnings %>
<br><strong> Average rating: </strong><%= @driver.average_rating %>
<br>
<% index = 0 %>
<strong> List of Trips: </strong>
<% @driver.total_driver_trips.each do |driver| %>
<br> <% index += 1 %>
 <%= index %>. Date: <%= driver.date %>, Rating: <%= driver.rating %>, Cost: $<%=(driver.cost.to_f)/100 %>
<% end %>
<br>
<%= link_to "Edit Driver", edit_driver_path(@driver) %> |
<%= link_to " Delete Driver", driver_path(@driver), method: :delete, data: {confirm: "Are you sure?"}%>