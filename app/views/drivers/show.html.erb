<div>
  <h1><%= @driver.name %></h1>
    <% if @driver.available %>
        <h3>Status: Available</h3>
    <% else %>
        <h3>Status: Unavailable</h3>
    <% end %>
  <h3>Total Earnings: $<%= @driver.total_earnings %></h3>


  <%= link_to "Edit", edit_driver_path(@driver), class: "link-button" %>
  <%= link_to "Delete", driver_path(@driver), method: :delete, data: {confirm: "Are you sure?"}, class: "link-button"%>
</div>
<div>

  <table>
    <tr>
      <th>Trip ID</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
    </tr>
    <% @trips.each do |trip|  %>

        <tr>
            <td><%= link_to trip.id, trip_path(trip) %></td>
            <td><%= @driver.name %></td>
            <td><%= link_to trip.passenger_id, passenger_path(trip.passenger_id) %></td>
            <td><%= trip.date %></td>
            <td><%= trip.rating %></td>
            <td><%= trip.cost %></td>
        </tr>
    <% end %>
  </table>

</div>

<p><%= link_to "Return to Driver List", drivers_path %></p>