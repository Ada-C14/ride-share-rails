<!DOCTYPE html>
<html>
<head>
  <title><%=@driver.name%></title>
</head>
<body>
<header>
  <h1>Ada RideShare</h1>
  <nav>
    <ul>
      <li>Home</li>
      <%= link_to content_tag(:li,"Riders"), passengers_path, method: :get %>
      <%= link_to content_tag(:li,"Drivers"), passengers_path, method: :get %>
    </ul>
  </nav>
</header>
<main>
  <h2><b>Driver:</b> <%=@driver.name%></h2>
  <h3><b>Vin:</b> <%=@driver.vin%></h3>
  <nav>
    <ul>
      <%= link_to content_tag(:li, "Edit Info"), edit_driver_path(@driver.id), method: :get %>
      <%= link_to content_tag(:li, "Delete"), driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver info?"}%>
    </ul>
  </nav>

  <br/>
  <h3>Request Trip</h3>
  <br/>
  <h3>Trips</h3>
  <table class = "trips">
    <tr>
      <th>Trip ID</th>
      <th>Date</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Cost</th>
      <th>Rating</th>
      <th>View Trip</th>
    </tr>
    <% @trips.each do |trip| %>
      <tr>
        <td><%=trip.id%></td>
        <td><%=trip.date%></td>
        <td><%=trip.driver.name%> <%= link_to content_tag(:p, "View"), driver_path(trip.driver.id), method: :get %></td>
        <td><%=trip.passenger.name%> <%= link_to content_tag(:p, "View"), passenger_path(trip.passenger.id), method: :get %></td>
        <td>$<%='%.2f' % (trip.cost/100)%></td>
        <td><%=trip.rating %></td>
        <td><%= link_to content_tag(:p, "View"), trip_path(trip.id), method: :get %></td>
      </tr>
    <% end %>
  </table>
</main>
</body>
</html>