<h3>Rideshare Drivers</h3>
<section>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>VIN</th>
        <th>Total Earnings</th>
        <th>Average Rating</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @driver[:name] %></td>
        <td><%= @driver[:available] == 'true' ? 'Available' : "Trip in-progress" %></td>
        <td><%= @driver[:vin] %></td>
        <td><%= @driver[:cost] %></td>
        <td><%= @driver[:rating] %></td>
        <td><%= link_to "Edit", edit_driver_path(@driver.id) %> |
          <%= link_to "Delete", driver_path(@driver.id), method: :delete, data: { confirm: "Please confirm deletion." } %> |
          <%= link_to "Back", drivers_path %>
        </td>
      </tr>
    </tbody>
  </table>
</section>

<section>
  <h3>Drivers trips</h3>
  <%= render partial: "trips" %>
</section>
