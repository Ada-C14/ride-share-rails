<h3>Rideshare Drivers</h3>
<section>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>VIN</th>
        <th>Total Earnings</th>
        <th>Average Rating</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @driver[:name] %></td>
        <td><%= @driver[:available] == 'true' ? 'Available' : "Trip in-progress" %></td>
        <td><%= @driver[:vin] %></td>
      </tr>
    </tbody>
  </table>
</section>

