<h1><%= @driver.name %></h1>

<%= link_to "Edit", edit_driver_path(@driver) %>
<%= link_to "Delete", driver_path(@driver), method: :delete, data: {confirm: "Are you sure?"} %>

<% if @driver.available %>
  <p><strong>AVAILABLE</strong></p>
  <% else %>
  <p><strong>NOT AVAILABLE</strong></p>
  <% end %>
<p>VIN: <%= @driver.vin %></p>
<p>Average: <%= @driver.average_rating %></p>
<p>Total: <%= number_to_currency(@driver.total_earnings) %> </p>


<h3>List of Trips</h3>
<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Passenger</th>
    <th>Rating</th>
    <th>Cost</th>
    <th>Delete Trips</th>

  </tr>
  </thead>
  <tbody>
  <% @driver.trips.each do |trip| %>
  <tr>
      <td><%= link_to "#{trip.id}", trip_path(trip) %></td>
      <td><%= trip.date.strftime("%m/%d/%Y")  %></td>
      <td><%= link_to "#{trip.passenger.name}", passenger_path(trip.passenger) %></td>
      <td><%= trip.rating %></td>
      <td><%= number_to_currency(trip.cost) %></td>
      <td><%= link_to "Delete", trip_path(trip), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>

  </tbody>
</table>


