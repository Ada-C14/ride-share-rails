<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <style>
      /* Header/logo Title */
      .header {
          padding: 80px;
          text-align: center;
          background: rebeccapurple;
          color: white;
      }
      /* Increase the font size of the heading */
      .header h1 {
          font-size: 40px;
      }
      /* Style the top navigation bar */
      .navbar {
          overflow: hidden;
          background-color: #333;
      }
      /* Style the navigation bar links */
      .navbar a {
          float: left;
          display: block;
          color: white;
          text-align: center;
          padding: 14px 20px;
          text-decoration: none;
      }

      /* Right-aligned link */
      .navbar a. right {
          float: right;
      }
      /*Change color on hover*/
      .navbar a:hover {
          background-color: #ddd;
          color: black;
      }
      /* Footer */
      footer {
          padding: 100px;
          text-align: center;
          background: #ddd;
      }

      /*table styling*/
      thead:nth-child(odd){background-color: black;}
      tr:nth-child(even) {background-color: #c8a2c8;}
      table, th, td {
          border: 3px solid purple;
          padding: 10px;
          margin: 20px;
      }
      thead {
          color: white;
      }

      a {
          color: rebeccapurple;
      }
  </style>

</head>
<body>
<div class="header">
  <h1> Driver: <%= @driver.name %></h1>
</div>
<div class="navbar">
  <%= link_to "Home", homepages_path %>
  <%= link_to "Passengers", passengers_path%>
  <%= link_to "Drivers", drivers_path%>
</div>

  <h3>Vin: <%= @driver[:vin] %></h3>
  <h3> Driver Id: <%=@driver[:id] %></h3>

<h4>Availability: <%= driver_availability_string(@driver) %></h4>
<h4>More options:</h4>
  <%= link_to driver_online_string(@driver), {action: :set_available, id: @driver.id}, method: :patch %>
  <%= link_to "Delete Driver?", destroy_driver_path, method: :delete, data: {confirm: "Are you sure?"} %>
  <%= link_to "Edit Driver", edit_driver_path %>

<h4> <%= @driver[:name] %>'s average rating is
<%= @driver.average_rating %>. </h4>
<h4>
    Their trips totaled to $<%= @driver.total_money%> and they made $<%= @driver.after_fee %>.
</h4>
  <table>
    <thead>

    <tr>
      <th>Trip ID</th>
      <th>Trip Cost</th>
      <th>Trip Rating</th>
    </tr>
    </thead>
    <tbody>
    <% @driver.trips.each do |trip|%>
      <tr>
        <td><%= trip[:id] %></td>
        <td>$<%= trip[:cost] %></td>
        <td><%= trip[:rating] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </body>
