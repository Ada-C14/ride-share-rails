<h1>Driver Details</h1>
<br/>

<div class="profile-container">
  <div class="photo"><%= image_tag ("person_img.png") %></div>
  <ul class="info">
    <li><b>Name: </b><%= @driver.name %></li>
    <li><b>VIN: </b><%= @driver.vin %></li>
    <li><b>Status: </b><%= @driver.available ? "available" : "not available" %> <%= button_to "Change Status?",  { :action => "toggle_available" }, method: :patch %></li>

  </ul>
  <ul class="info-edit">
    <li>
      <div class="profile-buttons">
        <%= button_to "Edit Driver", edit_driver_path(@driver), method: :get %>
      </div>
      <div class="profile-buttons">
        <%= button_to "Delete Driver", driver_path(@driver), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </li>
  </ul>
</div>


<br/>

<div class="trip-header">
  <h3 class="trips">TRIPS ~ </h3>
  <div class="trips all-trips-button"><%= button_to "All #{@driver.name}'s Trips", driver_trips_path(@driver), method: :get %></div>
</div>
<div class="trip-info">
  <p><b>TOTAL EARNED FROM ALL TRIPS: </b>$<%= @driver.total_earnings %></p>
  <p><b>NUMBER OF TRIPS GIVEN: </b><%= @driver.trips.count %></p>
  <p><b>AVERAGE RATING: </b><%= @driver.average_rating %></p>
  <br/>
</div>