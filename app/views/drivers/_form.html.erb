<%= form_with model: @driver do |f| %>
  <p>Please enter driver information:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.label :available %>
  <%= f.select :available, [true, false] %>

  <%= f.submit action_name, class: "submit_button" %>
<% end %>