<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @driver, class: 'create-driver' do |f| %>
  <ul>
    <li>
      <h3><%= f.label :name %></h3>
      <%= f.text_field :name %>
    </li>
    <li>
      <h3><%= f.label :vin %></h3>
      <%= f.text_field :vin %>
    </li>
  </ul>
  <%= f.submit "Save", class: "save-passenger" %>
<% end %>