<%# in app/views/drivers/_form.html.erb %>
<h2> Form page </h2>
<%= form_with model: @driver, class: 'create-driver' do |f| %>
  <p>Please provide the following information :</p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :vin%>
  <%= f.text_field :vin %>
   <%= f.label :available %>
  <%= f.text_field :available%>
  <%= f.submit "#{action_name}", class: "driver-button" %>
<% end %>