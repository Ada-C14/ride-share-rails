<%= form_with model: @drivers, class: 'create-driver' do |f| %>
  <p>Please provide the following information to save your passenger:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%#= f.label :available %>
  <%#= f.text_field :available %>

  <%= f.submit "#{action_name}", class: "change-button" %>
<% end %>