<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @driver, class: 'driver-form' do |f| %>

  <p>Please fill in the form to update our database:</p>

  <p><%= f.label :name %>
    <%= f.text_field :name %></p>

  <p><%= f.label :vin %>
    <%= f.text_field :vin %></p>

  <p> <%= f.submit action_name, class: 'driver-button' %></p>
<% end %>