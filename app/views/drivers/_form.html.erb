<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @driver do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name%>
  <br>
  <%= f.label :vin %>
  <%= f.text_field :vin%>
  <br>
  <%= f.label :available %>
  <%= f.select :available, [ true, false ] %>
  <br>
  <br>
  <%= f.submit "#{button_name}" %>
<% end %>