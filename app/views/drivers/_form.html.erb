<div class="driver">
  <%= form_with model: @driver do |f| %>
    <p>Please the following information for a driver</p>
    <div class="label">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="label">
      <%= f.label :vin %>
      <%= f.text_field :vin %>
    </div>
    <%= f.submit action_name %>
  <% end %>
</div>