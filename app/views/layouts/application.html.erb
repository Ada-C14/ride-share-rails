<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="image-txt-container">
        <img src="/images/rideshare.png" alt="main" />
        <h1><%= link_to "RIDE SHARE", root_path %></h1>
      </div>
      <nav>
        <ul>
          <li><button class="show"><%= link_to "Show passengers", passengers_path %></button></li>
          <li><button class="show"><%= link_to "Show drivers", drivers_path %></button></li>
          <li><button class="show"><%= link_to "Add a passenger", new_passenger_path %></button></li>
          <li><button class="show"><%= link_to "Add a driver", new_driver_path %></button></li>
        </ul>
      </nav>
    </header>
    <main>
          <div>
             <%= yield %>
          </div>
    </main>
    <footer>&copy 2020</footer>
  </body>
</html>
