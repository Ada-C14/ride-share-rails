<!DOCTYPE html>
<html>
  <head>
    <title>RideShareRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li>
            <%= link_to "All Passengers", passengers_path  %>
          </li>
          <li>
            <%= link_to "Create New Passenger", new_passenger_path %>
          </li>
          <li>
            <%= link_to "All Drivers", drivers_path  %>
          </li>
          <li>
            <%= link_to "Create New Driver", new_driver_path %>
          </li>
          <li>
            <%= link_to "Home", root_path %>
          </li>
        </ul>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>


  </body>
</html>
