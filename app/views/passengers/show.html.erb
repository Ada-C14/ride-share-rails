<header><h1>Rosha RideShare App</h1></header>
<body>
<nav>
  <p><%= link_to "Home", root_path %></p>
  <p><%= link_to "Drivers List", drivers_path %></p>
  <p><%= link_to "Passengers List", passengers_path %></p>
  <p><%= link_to "Trips List", trips_path %></p>
  <p><%= link_to "Sign Up Driver", new_driver_path %></p>
  <p><%= link_to "Sign Up Passenger", new_passenger_path %></p>
</nav>


<h1>View Passenger</h1>
<h3>Passenger #<%= @passenger.id  %></h3>
<ul>
  <li>Passenger Name: <%= @passenger.name %> </li>
  <li>Passenger Phone Number: <%= @passenger.phone_num %> </li>
  <li>Passenger Total Expense: <%= @passenger.net_expenditures %> </li>
</ul>
<% @passenger.trips.each do |trip| %>
  <li> <%= link_to trip.id, trip_path(trip)%></li>
<% end %>
<p><%= link_to "Edit #{@passenger.name}", edit_passenger_path %></p>
<p><%= link_to "Delete #{@passenger.name}", passenger_path(@passenger.id), method: :delete, data: {confirm: "Are you sure?"} %></p>
<p><%= link_to "Request Trip", new_passenger_trip_path(@passenger.id) %></p>
</body>
<footer class="homepage">Copyright Rosha RideShare 2020</footer>