<h1>PASSENGER INFORMATION</h1>

<ul>
  <li>ID: <%= "#{@passenger.id}"%></li>
  <li>NAME: <%= "#{@passenger.name}"%></li>
  <li>PHONE NUMBER: <%= @passenger.phone_num %> </li>
</ul>

<h2>Trips taken:</h2>
<table style="width:50%">
  <tr>
    <th>Trip ID</th>
    <th>Driver ID</th>
    <th>Date</th>
    <th>Rating</th>
    <th>Cost</th>
  </tr>

  <% @passenger.trips.each do |trip| %>
    <tr>
      <td><%= "#{trip.id}" %> </td>
      <td><%= "#{trip.driver_id}" %> </td>
      <td><%= "#{trip.date}" %> </td>
      <td><%= "#{trip.rating}" %> </td>
      <td><%= "#{trip.cost}" %> </td>
    </tr>

  <% end %>