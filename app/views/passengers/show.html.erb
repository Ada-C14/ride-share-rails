<h3>Rideshare Passengers</h3>
<section>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Total Spent on Rides</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @passenger[:name] %></td>
        <td><%= @passenger[:phone_num] %></td>
        <td><%= number_to_currency(@passenger.lifetime_cost) %></td>
        <td><%= link_to "Edit", edit_passenger_path(@passenger.id) %> |
          <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: { confirm: "Please confirm deletion." } %> |
          <%= link_to "Back", passengers_path %>
        </td>
      </tr>
    </tbody>
  </table>
</section>

<section>
  <button><%= link_to "Request Ride", passenger_trips_path(@passenger.id), method: :post %></button>
  <h3>Passenger trips</h3>
  <%= render partial: "trips" %>
</section>