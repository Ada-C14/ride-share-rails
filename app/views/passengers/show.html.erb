<div>
    <h4> Passenger Details</h4>
    <br>
    <ul>
        <li>Name: <%= @passenger.name %> </li>
        <br>
        <li>Phone: <%= @passenger.phone_num %></li>
        <br>
        <li>Total spent: <%= @passenger.net_expenditures %></li>
    </ul>
    <div><%= link_to "Edit #{@passenger.name}", edit_passenger_path(@passenger.id) %></div>
    <br>
    <div><%= link_to "Delete #{@passenger.name}", passenger_path(@passenger), method: :delete, data: { confirm: "Are you sure?"} %></div>
    <br>
</div>
<p><%= link_to "Return to passenger list", passengers_path %></p>

