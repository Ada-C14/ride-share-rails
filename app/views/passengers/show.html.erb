<h3>Passenger:</h3>
<table class="table">
  <tr>
    <th>Passenger ID</th>
    <th>Passenger Name</th>
    <th>Passenger Phone Number</th>
  </tr>
  <td><%= @passenger.id %></td>
  <td><%= @passenger.name %></td>
  <td><%= @passenger.phone_num %></td>
</table>

<%= link_to "Back", passengers_path %> ||
<%= link_to "Edit", edit_passenger_path %> ||
<%= link_to "Delete", passenger_path(@passenger), method: :delete, data: {
  confirm: "Are you sure you want to delete this passenger?" } %>