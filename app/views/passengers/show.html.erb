<h1>Passenger Details</h1>
<h2><%= @passenger.name %></h2>

<p>Phone Number: <%= @passenger.phone_num %></p>
<p>Total Charged: $<%= @passenger.total_charged %></p>

<section class="trip-list">
  <h3>Trips</h3>
  <% @passenger.trips.each do |trip| %>
<<!--    link to trip after establishing nested route -->>
    <div><%= trip.date %></div>
  <% end %>
</section>



<%= link_to "Edit", edit_passenger_path(@passenger) %>

<%= link_to "Delete", passenger_path(@passenger), method: :delete, data: { confirm: "Are you sure you want to delete passenger: '#{@passenger.name}?'" } %>

<% link_to "All Passengers", passengers_path %>



