<h2> New passenger page</h2>

<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @passenger, class: 'create-passenger' do |f| %>
  <p>Please provide the following information to edit your passenger profile:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label :phone %>
  <%= f.text_field :phone_num %>
  </div>

  <%= f.submit "Save Passenger", class: "passenger-button" %>
<% end %>