<table>
  <thead>
    <tr>
      <th>Trip ID</th>
      <th>Date</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Cost</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% Trip.where("passenger_id = #{@passenger.id}").order(date: :desc).each do |trip| %>
        <td><%= link_to trip.id, trip_path(trip.id) %></td>
        <td><%= trip.date.strftime("%m/%d/%Y") %></td>
        <td><%= link_to Driver.find_by(id: trip.driver_id).name, driver_path(trip.driver_id) %></td>
        <td><%= Passenger.find_by(id: trip.passenger_id).name %></td>
        <td><%= number_to_currency(trip.cost) %></td>
        <td><%= trip.rating %></td>
      <% end %>
    </tr>
  </tbody>
</table>