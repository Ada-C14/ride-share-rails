<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @passenger, class: "create-passenger" do |f|  %>
  <p> Please provide or change for following information </p>
  <div class="new_field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="new_field">
    <%= f.label :phone_num %>
    <%= f.text_field :phone_num %>
  </div>
  <div class="new_field">
    <%= f.submit "#{action_name} Passenger", class: "passenger-button" %>
  </div>
<% end %>