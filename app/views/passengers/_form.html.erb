
<%= form_with model: @passenger, class: 'create-passenger' do |f| %>
  <p>PLEASE FILL IN THE FOLLOWING PASSENGER INFORMATION:</p>

  <% if @passenger.errors.any? %>
    <ul>
    <% @passenger.errors.each do |column, message| %>
      <li>
        <p><%= column %> <%= message %></p>
      </li>
    <% end %>
    </ul>

  <% end %>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.submit "#{action_name} PASSENGER", class: "button" %>
<% end %>