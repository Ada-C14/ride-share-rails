<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <%= form_with model: @passenger do |f| %>
    <p>Please enter the following information for a passenger:</p>
    <div class="row">
      <div class="col-25">
        <%= f.label :name %>
      </div>
      <div class="col-75">
        <%= f.text_field :name %>
      </div>
      <div class="col-25">
        <%= f.label :phone_num %>
      </div>
      <div class="col-75">
        <%= f.text_field :phone_num %>
      </div>
      <div class="submit">
        <%= f.submit action_name %>
      </div>
  <% end %>
  </div>
</div>
<%= link_to "Return do passengers list", passengers_path %>