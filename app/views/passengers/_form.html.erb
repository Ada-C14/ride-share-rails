<%= form_with model: @passenger, class: 'edit-passenger' do |f| %>
  <p>Please provide the following information to save your task to our database:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :phone_num %>
    <%= f.text_area :phone_num %>
  </div>

  <%= f.submit "#{action_name} Passenger", class: "passenger-button" %>
<% end %>