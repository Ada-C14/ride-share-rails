<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @passenger do |f| %>
  <div class="container">
    <p>Please provide the information for a passenger:</p>
    <div class="row">
      <div class="col-25">
        <%= f.label :name %>
      </div>
      <div class="col-75">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <%= f.label :phone_num %>
      </div>
      <div class="col-75">
        <%= f.text_field :phone_num %>
      </div>
    </div>
    <div class="row">
      <div class="submit">
        <%= f.submit action_name %>
      </div>
    </div>
  </div>
<% end %>
<%= link_to "Return to passengers list", passengers_path, class:"return"%>
</div>

