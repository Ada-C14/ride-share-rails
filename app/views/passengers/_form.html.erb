<header>
  <h1><%= header_title %></h1>
</header>
<main>
  <section class="error_messages">
    <% if @passenger.errors.any?%>
      <ul >
      <% @passenger.errors.each do |attribute, error_message| %>
        <li>
          Error: <%= attribute.capitalize.to_s.gsub('_', ' ') %> <%= error_message %>
        </li>
        <% end %>
      </ul>
    <% end %>
  </section>
  <%= form_with model: @passenger do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </div>

    <%= f.submit action_name, class: "btn btn-success" %>

  <% end %>
</main>
