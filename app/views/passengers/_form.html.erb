<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %> <%= message %></strong>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @passenger do |f| %>

  <p><%= f.label :name %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :phone_num %></p>
  <p><%= f.text_field :phone_num %></p>

  <%= f.submit "#{action_name} Passenger", class: "passenger-button" %>
<% end %>