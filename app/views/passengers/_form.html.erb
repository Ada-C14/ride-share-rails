<div>

  <%= form_with model: @passenger do |f| %>

    <% if @passenger.errors.any? %>
      <ul class="errors">
        <% @passenger.errors.each do |column, message| %>
          <li>
            <p><%= column %> <%= message %></p>
          </li>
        <% end %>
      </ul>
    <% end %>


    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <br>

    <div>
      <%= f.label :phone_num %>
      <%= f.text_field :phone_num %>
    </div>
    <br>

    <%= f.submit action_name, class: "button" %>

  <% end %>
</div>