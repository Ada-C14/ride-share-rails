<h1><%= form_title %></h1>

<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @passenger do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :phone_num, "Phone Number" %>
    <%= f.text_field :phone_num %>
  </div>

  <%= f.submit "#{action_name} Passenger", class: "passenger_button" %>
<% end %>