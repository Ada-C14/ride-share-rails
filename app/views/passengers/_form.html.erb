<header>
  <h1><%= header_title %></h1>
</header>
<main>
  <%= form_with model: @passenger do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </div>

    <%= f.submit action_name %>

  <% end %>
</main>
