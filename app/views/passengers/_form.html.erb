<%= form_with model: @passenger, class: 'create-passenger' do |f| %>
  <p>Please fill in the details to add a new passenger:</p>

  <% if @passenger.errors.any? %>
    <ul>
      <% @passenger.errors.each do |column, message| %>
        <li>
          <%= column %> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end  %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone_num %>
    <%= f.text_field :phone_num %>
  </div>

  <%= f.submit action_name %>
<% end %>