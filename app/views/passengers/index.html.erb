<h3>Passengers:</h3>
<%= link_to "Home", root_path %> ||
<%= link_to "Add a passenger", new_passenger_path %>
<ul>
  <% if @passengers.length > 0 %>
  <% @passengers.each do |passenger|  %>
    <li>
      <%= link_to passenger.name, passenger_path(passenger) %>
    </li>
    <% end %>
  <% else %>
    No passengers
  <% end %>
</ul>