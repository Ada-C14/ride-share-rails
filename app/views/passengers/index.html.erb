<h1>Passengers</h1>

<div>
  <%= link_to "Add another passenger", new_passenger_path %>
</div>
<br>

<div class="flex-container">
  <% @passengers.each do |passenger| %>
    <div class="flip-card">
      <div class="flip-card-inner">
        <div class="flip-card-front">
          <%= passenger.name %>
        </div>
        <div class="flip-card-back">
          | <%= link_to "Show", passenger_path(passenger.id) %> | <br>
          | <%= link_to "Edit", edit_passenger_path(passenger) %> | <br>
          | <%= link_to "Delete", passenger_path(passenger.id), method: :delete,
                        data: {confirm: 'Are you sure you would like to delete?'} %> |
        </div>
      </div>
    </div>
  <% end %>
</div>