<h3>Rideshare Passengers </h3>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= paginate @passengers, class:"page"%>

<table>
  <thead>
  <th>Name</th>
  <th>Phone number</th>
  <th>Liftime Cost</th>
  </thead>
  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= link_to passenger.name, passenger_path(passenger.id) %></td>
        <td><%= link_to passenger.phone_num, passenger_path(passenger.id) %></td>
        <td><%= number_to_currency(passenger.lifetime_cost) %></td>
      </tr>
    <% end %>
  </tbody>
</table>