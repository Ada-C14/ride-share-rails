<h1>Passenger List </h1>
<nav>
  <%= link_to "Add a New Passenger", new_passenger_path%>
</nav>
<div>
  <%@passengers.each do |passenger|%>
    <ul>
      <li><strong><%= link_to passenger.name, passenger_path(passenger.id) %></strong> : Passenger ID: <%= passenger.id %> : <%= passenger.phone_num%> | <%= link_to "Edit Passenger", edit_passenger_path(passenger.id) %> | <%= link_to "Delete Passenger", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure?"} %> |</li>
    </ul>
  <%end%>
</div>
<nav>
  <%= link_to "Add a New Passenger", new_passenger_path%>
</nav>