<h1>All Passengers</h1>

<h3><%= button_to "Add a Passenger", new_passenger_path, method: :get %></h3>

<ul>
  <% @passengers.each do |passenger|  %>
    <li>
      <%= link_to passenger.name, passenger_path(passenger.id) %>
    </li>
  <% end %>
</ul>

<div>
<%= link_to "Back to Passengers", passengers_path %>
</div>