<%#index.html.erb%>

<div class="scroll-top"></div>

<table>
  <thead>

  <tr>
    <th>PASSENGER NAME</th>

    <th>PHONE NUMBER</th>

    <th colspan="3"></th>
  </tr>

  </thead>

  <tbody>

  <% @passengers.each do |passenger| %>
    <tr>
      <td><%= link_to passenger.name, passenger_path(passenger), class: 'table-link' %></td>

      <td class="table-content">
        <%= passenger.phone_num %>
      </td>

      <td><%= link_to "Edit", edit_passenger_path(passenger), class: 'table-link' %></td>
      <td><%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure you want to delete #{passenger.name}?"}, class: 'table-link' %><td>
    </tr>
  <% end %>

  </tbody>

</table>

