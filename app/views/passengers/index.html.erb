<a name="top"></a>
<h1>Passengers List</h1>
<div class="index">
    <p><%= link_to "Create New Passenger Account", new_passenger_path %></p>
</div>
<section class="table-border">  
  <table class="list-table">
    <tr>
      <th>Passenger ID</th>
      <th>Passenger Name</th>
      <th></th>
    </tr>
    <% @passengers.order(id: :asc).each do |passenger| %>
      <% if passenger.isactive %>
        <tr>
          <th><%= passenger.id %></th>
          <th><%= link_to passenger.name, passenger_path(passenger.id) %></th>
          <th><%= link_to "Edit", edit_passenger_path(passenger.id) %> |
            <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure?"} %></th>
        </tr>
      <% end %>  
    <% end %>
  </table>
</section>
<section class="bk-top-grid">
  <a href="#top" class="bk-top">Back to Top</a>
</section>