<h1>Passengers Database</h1>
<button><%= link_to "Home Page", homepages_path %></button>
<button><%= link_to "Add Passenger", new_passenger_path %></button>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Passenger Name</th>
    <th>Edit</th>
    <th>Delete</th>

  </tr>
  </thead>
  <% @passengers.each do |passenger| %>
  <tr>
    <td><%= link_to passenger.name, passenger_path(passenger) %> </td>
    <td><%= link_to "Edit", edit_passenger_path(passenger) %> </td>
    <td><%= link_to "Delete", passenger_path(passenger), method: :delete, data: {confirm: "Are you sure?"} %> </td>
  </tr>
  <% end %>
</table>
<button><%= link_to "Home Page", homepages_path %></button>
<footer>copyright 2020</footer>