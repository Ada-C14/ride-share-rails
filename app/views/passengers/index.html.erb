<h1>Rider List </h1>

<nav>
  <%=link_to "Homepage", homepages_path %> |
  <%=link_to "View all drivers", drivers_path %> |
  <%= link_to "Add a New Rider ", new_passenger_path%> |
</nav>

<div>
  <%@passengers.each do |passenger|%>
    <ul>
      <li><strong><%= link_to passenger.name, passenger_path(passenger.id) %></strong> : Passenger ID: <%= passenger.id %> : <%= passenger.phone_num%> | <%= link_to "Edit Passenger", edit_passenger_path(passenger.id) %> | <%= link_to "Create a new trip", passenger_trips_path(passenger.id), method: :post %> | <%= link_to "Delete Passenger", passenger_path(passenger.id), method: :delete, data: {confirm: "Are you sure?"} %> |</li>
    </ul>
  <%end%>
</div>

<nav>
  <%=link_to "Homepage", homepages_path %> |
