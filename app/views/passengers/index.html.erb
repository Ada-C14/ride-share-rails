<h2>Passengers</h2>
<ul>
  <%@passengers.each do |passenger| %>
    <li>
      <%= link_to(passenger.name, passenger_path(passenger.id)) %>,
      Phone Number: <%= passenger.phone_num %>,
      <%= link_to "Edit #{passenger.name}", passenger_path(passenger.id)>
      <%= link_to "Delete #{passenger.name}", passenger_path(passenger.id), method: :delete, data:{confirm: 'Please confirm you would like to delete this passenger.'} %>
      <%= link_to "Add trip for #{passenger.name}", passenger_path(passenger.id)>
    </li>
  <% end %>
</ul>
<%= link_to "Add Passenger", new_pasenger_path %>