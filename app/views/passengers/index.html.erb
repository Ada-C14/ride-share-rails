<h1> All Passengers</h1>
<p><%= link_to "Create New Passenger Account", new_passenger_path%></p>
<ul id = "passengers">
  <% @passengers.each do |passenger| %>
    <li>
      <%= link_to passenger.name, passenger_path(passenger) %>
      <%= link_to 'Add new trip |', new_passenger_path(passenger) %>
      <%= link_to 'Edit |', edit_passenger_path(passenger[:id]) %>
      <%= link_to 'Delete', destroy_passenger_path(passenger), method: :delete, data: {confirm: 'Are you sure?' }  %>
    </li>
  <% end %>
</ul>
