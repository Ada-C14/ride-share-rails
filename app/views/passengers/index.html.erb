<%#index.html.erb%>

<h1>Passengers</h1>

<%= link_to "Add Passenger", new_passenger_path, class: "link-button" %>

<table id="myTable">
  <tr>
    <th>Passenger ID</th>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Action</th>
  </tr>
  <% @passenger.each do |passenger|  %>

    <tr>
      <td><%= link_to passenger.id, passenger_path(passenger) %></td>
      <td><%= link_to passenger.name, passenger_path(passenger) %></td>
      <td><%= passenger.phone_num %></td>
      <td>
        <%= link_to "Request A Trip", new_passenger_trip_path(passenger), class: "request-button" %> |
        <%= link_to "Edit", edit_passenger_path(passenger) , class: "link-button"%> |
        <%= link_to "Delete", passenger_path(passenger), method: :delete, data: {confirm: "Are you sure?"}, class: "link-button"%>
      </td>
    </tr>
  <% end %>
</table>
