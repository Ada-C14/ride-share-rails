<header>
  <h1>Passengers</h1>
</header>
<main>
  <ul>
    <% @passengers.each do |passenger|  %>
      <li>
        <%= link_to passenger.name, passenger_path(passenger.id) %>
        <%= button_to "Edit Passenger", edit_passenger_path(passenger.id), method: :get, class: "btn btn-warning btn-sm" %>
        <%= button_to "Delete", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger btn-sm" %>
      </li>
    <% end %>
    <%= button_to "Add New Passenger", new_passenger_path, method: :get, class: "btn btn-primary" %>

  </ul>
</main>