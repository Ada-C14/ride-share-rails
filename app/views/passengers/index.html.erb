<h2>Passengers list</h2>
<% if @passengers.length > 0 %>

  <ul>
    <% @passengers.each do |passenger| %>
        <li> <%= link_to  passenger.name, passenger_path(passenger) %></li>
    <% end %>
  </ul>

<% else %>
  <h3>No passenger</h3>
<% end %>

<p class="buttons">
  <%= link_to "Add a New Passenger", new_passenger_path %>
</p>