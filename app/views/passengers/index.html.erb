<h1>Passengers</h1>
<h2>Passenger List:</h2>

<% if @passengers.length > 0 %>
  <p class="Heading">Name Rating </p>
<ul>
<% @passengers.each do |passenger| %>
    <li><i class="fa fa-user" aria-hidden="true"></i> <%= link_to passenger.name, passenger_path(passenger.id)%></li>

  <% end  %>
</ul>
<% else %>
  <h3>No passengers to display </h3>
<%end %>

