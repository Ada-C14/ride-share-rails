<nav>
  <ul>
    <li><button class="show"><a href="<%= new_driver_path %>">Add a driver</a></button></li>
    <li><button class="show"><a href="<%= new_passenger_path %>">Add a passenger</a></button></li>
  </ul>
</nav>

<h3>Rideshare Passengers </h3>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<table>
  <thead>
  <th>ID</th>
  <th>Name</th>
  <th>Phone number</th>
  <th>Options</th>
  </thead>
  <tbody>
    <% Passenger.order('id').each do |passenger| %>
      <tr>
        <td><%= passenger.id %></td>
        <td><%= link_to passenger.name, passenger_path(passenger.id) %></td>
        <td><%= link_to passenger.phone_num, passenger_path(passenger.id) %></td>
        <td>
            <%= link_to "Edit", edit_passenger_path(passenger.id) %> |
            <%= link_to "Delete", passenger_path(passenger.id), method: :delete, data: { confirm: "Please confirm deletion." } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>