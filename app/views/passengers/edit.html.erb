<%= form_with model: @passenger, class: "create-passengers" do |f| %>
  <p>Please provide the following information to edit your driver in our database:</p>

  <% if @passenger.errors.any? %>
    <ul class="errors">
      <% @passenger.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %> 
  </div>

<div>
  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>
  </div>

<div>
  <%= f.submit "Edit Passenger", class: "edit-button" %>
<% end %>

</div>