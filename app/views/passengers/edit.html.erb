<% if @passengers.errors.any? %>
  <ul class="errors">
    <% @passengers.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
