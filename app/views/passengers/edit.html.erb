<h2>Passenger edit page</h2>

<%= form_with model: @passenger, class: 'edit-passenger' do |f| %>
  <p>Please make changes:</p>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone_num %>
  </div>


  <%= f.submit "Save Edit", class: "passenger-button" %>
<% end %>
