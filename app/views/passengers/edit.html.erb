<%# edit.html.erb %>

<%= form_with model: @passenger, class: 'edit-passenger' do |f| %>

  <p><%= f.label :name %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :phone_num %></p>
  <p><%= f.text_field :phone_num %></p>

  <p><%= f.submit "Edit Passenger", class: "passenger-button" %></p>
<% end %>