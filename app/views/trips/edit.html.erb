<h1>Edit Trip</h1>

<div>
  <%= form_with model: @trip, class: 'create-trip' do |f| %>
  <div>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <br>

  <div>
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select([1, 2, 3, 4, 5]) %>  </div>
  <br>

  <div>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>
  <br>

  <div>
    Driver Name:
    <%= @trip.driver.name %>
  </div>
  <br>

  <div>
    Passenger Name:
    <%= @trip.passenger.name %>
  </div>
  <br>

    <%= f.submit action_name, class: "button" %>

  <% end %>
</div>
