<h2>Edit trip page</h2>

<%= form_with model: @trip, class: 'edit-trip' do |f| %>
  <p>Please make changes:</p>

  <div>
    <%= f.label :driver_id %>
    <%= f.text_field :driver_id %>
  </div>

  <div>
    <%= f.label :passenger_id %>
    <%= f.text_field :passenger_id %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <%= f.submit "Save Edit", class: "trip-button" %>
<% end %>