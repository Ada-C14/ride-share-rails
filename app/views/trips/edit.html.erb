<h2>Edit trip page</h2>

<%= form_with model: @trip, class: 'edit-trip' do |f| %>
  <p>Please make changes:</p>

  <div>
    <%= f.label :driver_id %>
    <%= f.collection_select :driver_id, @drivers, :id, :name %>
  </div>

  <div>
    <%= f.label :passenger_id%>
    <%= f.collection_select :passenger_id, @passengers, :id, :name %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <%= f.submit "Save Edit", class: "trip-button" %>
<% end %>