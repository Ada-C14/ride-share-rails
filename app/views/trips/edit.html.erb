<h2>Edit Trips</h2>

<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<!--put driver and passenger name-->
<div class="edit-trip">
  <%= form_for @trip do |f| %>
    <%= f.label :rating %>
    <br>
    <%= f.text_field :rating %>
    <br>
    <%= f.label :cost %>
    <br>
    <%= f.text_area :cost %>
    <br>

    <%= f.submit %>
  <% end %>
</div>