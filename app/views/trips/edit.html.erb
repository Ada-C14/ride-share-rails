<h1>Edit Trip</h1>

<p>Please assign a rating to your trip:</p>

<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li><strong><%= column %></strong> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip, class: 'trip-form' do |f| %>
  <%#= f.label :date %>
  <%#= f.text_field :date %>

  <%#= f.label :driver %>
  <%#= f.select :driver_id, Driver.all.map { |driver| [driver.name, driver.id] } %>

  <%#= f.label :passenger %>
  <%#= f.select :passenger_id, Passenger.all.map { |passenger| [passenger.name, passenger.id] } %>

  <%#= f.label :cost %>
  <%#= f.text_field :cost %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.submit "Save", class: "button" %>
<% end %>