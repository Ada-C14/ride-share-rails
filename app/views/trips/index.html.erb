<h1>Trip List</h1>

<nav>
  <%=link_to "Homepage", homepages_path %> |
  <%= link_to "Rider List", passengers_path %> |
  <%= link_to "Driver List", drivers_path %> |

</nav>

<div>
  <p> Total Cost: <%=cents_dollars(@trips.total_expenditure)%></p>
    <ul>
      <% @trips.each do |trip| %>
        <li><strong><%= link_to trip.passenger.name, passenger_path(trip.passenger.id) %></strong> : Trip ID: <%=trip.id %> | Trip Rating : <%=trip.rating %> | Passenger ID: <%=trip.passenger.id%> | Driver ID: <%=trip.driver.id%> | Cost: <%=trip.cost %> | <%= link_to "Edit Rating", edit_trip_path(trip.id)%> | <%= link_to "Delete Trip", trip_path(trip.id), method: :delete, data: {confirm: "Are you sure?"} %> |</li>
      <% end %>
    </ul>
</div>

<nav>
  <%=link_to "Homepage", homepages_path %> |
