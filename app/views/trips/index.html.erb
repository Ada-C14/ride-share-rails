<h1>Trips</h1>

<ul>
  <% @trips.each do |trip| %>
    <li>

      <div>
        Trip ID: <%= trip.id %>
      </div>
      <div>
        <%= link_to "Show", trip_path(trip.id) %> |
        <%= link_to "Edit", edit_trip_path(trip) %> |
        <%= link_to "Delete", trip_path(trip.id), method: :delete,
                    data: {confirm: 'Are you sure you would like to delete?'} %> |
      </div>
    </li>

  <% end %>
</ul>

