


# if drivers
<% if !@driver_id.nil? %>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Trip ID</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Passenger Name</th>
    </tr>
    </thead>

    <tbody>
    <% @driver.trips.each do |trip| %>
      <tr>
        <td><%= link_to "#{trip.id}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.rating}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.cost}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.date}", trip_path(trip.id) %></td>
        <td><%= link_to "#{Passenger.find_by(id: trip.passenger_id).name}", passenger_path(trip.passenger_id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  # if passengers
<% elsif !@passenger_id.nil? %>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Trip ID</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Driver Name</th>
    </tr>
    </thead>

    <tbody>
    <% @passenger.trips.each do |trip| %>
      <tr>
        <td><%= link_to "#{trip.id}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.rating}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.cost}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.date}", trip_path(trip.id) %></td>
        <td><%= link_to "#{Driver.find_by(id: trip.driver_id).name}", driver_path(trip.driver_id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<%= else %>

  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th>Trip ID</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Date</th>
      <th>Passenger Name</th>
    </tr>
    </thead>

    <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= link_to "#{trip.id}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.rating}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.cost}", trip_path(trip.id) %></td>
        <td><%= link_to "#{trip.date}", trip_path(trip.id) %></td>
        <td><%= link_to "#{Driver.find_by(id: trip.driver_id).name}", driver_path(trip.driver_id) %></td>
        <td><%= link_to "#{Passenger.find_by(id: trip.passenger_id).name}", passenger_path(trip.passenger_id) %></td>

      </tr>
    <% end %>
    </tbody>
  </table>


<% end %>
