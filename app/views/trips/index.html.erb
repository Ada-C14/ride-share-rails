<h1>Trips Database</h1>
<ul>
  <% @trips.each do |trip| %>
  <li>
    <%= link_to trip.id, trip_path(trip) %> |
    <%= link_to trip.date, trip_path(trip) %> |
    <%= link_to "Edit", edit_trip_path(trip) %> |
    <%= link_to "Delete", trip_path(trip), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>

