<h1>trips#index</h1>
<p>Find me in app/views/trips/index.html.erb</p>


<% if @trips.length > 0 %>
   <% @trips.each do |trip|%>
        <ul>
            <li><%= link_to "Trip details", trip_path(trip.id) %></li>            
        </ul>
    <% end %>
<% else %>
    <h3> No trip found! </h3>
<% end %>