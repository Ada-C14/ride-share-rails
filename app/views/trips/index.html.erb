<nav xmlns="http://www.w3.org/1999/html">
  <ul>
    <li><button class="show"><a href="<%= new_driver_path %>">Add a driver</a></button></li>
    <li><button class="show"><a href="<%= new_passenger_path %>">Add a passenger</a></button></li>
  </ul>
</nav>

<h3>Trips List</h3>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<table>
  <thead>
    <th>ID</th>
    <th>Date</th>
    <th>Driver</th>
    <th>Passenger</th>
    <th>Price</th>
    <th>Rating</th>
    <th></th>
  </thead>
  <tbody>
  <% @trips.each do |trip|  %>
    <tr>
      <td><%= link_to trip.id, trip_path(trip.id) %></td>
      <td><%= trip.date.strftime("%m/%d/%Y") %></td>
      <td><%= link_to Driver.find_by(id: trip.driver_id).name, driver_path(trip.driver_id) %></td>
      <td><%= link_to Passenger.find_by(id: trip.passenger_id).name, passenger_path(trip.passenger_id) %></td>
      <td><%= number_to_currency(trip.cost) %></td>
      <td><%= trip.rating %></td>
      <td><%= link_to "Delete", trip_path(trip.id), method: :delete, data: { confirm: "Please confirm deletion." } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
