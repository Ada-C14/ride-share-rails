<%#index.html.erb%>

<h1>Trips</h1>

<div><%= link_to "Add A Trip", new_trip_path %></div>

<div>

  <table>
    <tr>
      <th>Trip ID</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Action</th>
    </tr>
    <% @trips.each do |trip|  %>

      <tr>
        <td><%= link_to trip.id, trip_path(trip) %></td>
        <td><%= link_to Driver.find(trip.driver_id).name, driver_path(trip.driver_id) %></td>
        <td><%= link_to Passenger.find(trip.passenger_id).name, passenger_path(trip.passenger_id) %></td>
        <td><%= trip.date %></td>
        <td><%= trip.rating %></td>
        <td><%= trip.cost %></td>
        <td>
          <%= link_to "Edit", edit_trip_path(trip) , class: "link-button"%> |
          <%= link_to "Delete", trip_path(trip), method: :delete, data: {confirm: "Are you sure?"}, class: "link-button"%>
        </td>
      </tr>
    <% end %>
  </table>

</div>

