<h1>Trips</h1>
<% if @trips && @trips.length > 0 %>
  <ul>
    <% @trips.each do |trip| %>
      <li> <%= link_to trip.id, trip_path(trip)%></li>
    <% end %>
  </ul>
<% else %>
  <p>No trips in database</p>
<% end %>
