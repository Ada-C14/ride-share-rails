
<%= form_with model: @trip, class: 'trip-form' do |f| %>


  <div >
    <%= f.label :trip_id  %>
    <%= f.text_field :trip_id %> </br>

    <%= f.label :date %>
    <%= f.text_field :date %> </br>

    <%= f.label :driver_id  %>
    <%= f.text_field :driver_id %>

    <%= f.label :driver_name  %>
    <%= f.text_field :driver_name %>

    <%= f.label :passenger_id  %>
