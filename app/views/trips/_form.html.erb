<% if @trip.errors.any? %>
  <ul>
    <% @trip.errors.each do |column, message| %>
      <li><%= column %> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip do |f| %>
  <p>Please enter trip information:</p>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :rating %>
  <%= f.select :rating, [1, 2, 3, 4, 5], include_blank: true %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.label :driver_id %>
  <%= f.select :driver_id, Driver.all.collect { |driver| [ driver.name, driver.id ] } %>

  <%= f.label :passenger_id %>
  <%= f.select :passenger_id, Passenger.all.collect { | passenger| [passenger.name, passenger.id] } %>

  <%= f.submit action_name, class: "submit_buttom" %>
<% end %>