<h1><%= form_title %></h1>

<%= form_with model: @trip do |f| %>
  <div>
    <%= f.label :driver_id %>
<!--    TODO add a dropdown menu after setting relationship-->
    <%= f.text_field :driver_id %>
  </div>

  <div>
    <%= f.label :passenger_id %>
<!--    TODO add a dropdown menu after setting relationship-->
    <%= f.text_field :passenger_id %>
  </div>

  <div>
    <%= f.label :date %>

    <%= f.text_field :date %>
  </div>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <%= f.submit "#{action_name} Trip", class: "trip_button" %>

<% end %>