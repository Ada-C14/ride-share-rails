<%= form_with model: @trip, class: 'trip-form' do |f| %><%= f.label :name %>
  <%= f.label :id %>
  <%= f.text_field :id %>

  <%= f.label :driver %>
  <%= f.select :driver_id, Driver.all.map { |driver| [driver.name, driver.id] } %>

  <%= f.label :passenger %>
  <%= f.select :passenger_id, Passenger.all.map { |passenger| [passenger.name, passenger.id] } %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.submit "Save", class: "button" %>
<% end %>