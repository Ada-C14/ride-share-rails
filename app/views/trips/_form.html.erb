<% # in app/views/trips/_form.html.erb %>
<h2> Form page </h2>
<%= form_with model: @trip, class: "create-trip" do |f| %>
  <p>Please provide the following information :</p>
  <%= f.label :driver_id %>
  <%= f.text_field :driver_id %>
  <%= f.label :passenger_id %>
  <%= f.text_field :passenger_id %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.submit "#{action_name}", class: "trip-button" %>
<% end %>