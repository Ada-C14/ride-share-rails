<h1><%= form_title %></h1>

<%= form_with model: @trip do |f| %>
  <div>
    <%= f.label :driver_id %>
    <%= f.select :driver_id, Driver.all.map { |driver| [driver.name, driver.id] } %>
  </div>

  <div>
    <%= f.label :passenger_id %>
    <%= f.select :passenger_id, Passenger.all.map { |passenger| [passenger.name, passenger.id] } %>
  </div>

  <div>
    <%= f.label :date %>

    <%= f.text_field :date %>
  </div>

  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>

  <div>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <%= f.submit "#{action_name} Trip", class: "trip_button" %>

<% end %>