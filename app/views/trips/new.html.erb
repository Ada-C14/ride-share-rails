<h2>ADD NEW TRIP</h2>

<% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @trip do |f| %>

  <%= f.label :passenger_id %>
  <%= f.select :passenger_id, Passenger.order(:name).map { |pass| [pass.name, pass.id] } %>

  <%= f.submit "REQUEST TRIP" %>
<% end %>

