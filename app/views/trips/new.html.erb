<p><%= link_to "Home", root_path %></p>
<p><%= link_to "Drivers List", drivers_path %></p>
<p><%= link_to "Passengers List", passengers_path %></p>
<p><%= link_to "Add Driver Account", new_driver_path %></p>
<p><%= link_to "Add Passenger Account", new_passenger_path %></p>

<%= form_with model: @trip, class: 'create-trip' do |f|%>
  <p>Please provide the following information to add a new trip to our database:</p>
  <%= f.label :driver_id %>
  <%= f.text_field :driver_id %>
  <%= f.label :passenger_id %>
  <%= f.text_field :passenger_id %>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.submit "Add Passenger", class: "Passenger-button" %>
<% end %>

