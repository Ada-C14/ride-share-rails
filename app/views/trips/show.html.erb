<div>
  <h2>Driver: <%= link_to @driver.name, driver_path(@driver) %></h2>
  <h2>Passenger: <%= link_to @passenger.name, passenger_path(@passenger) %></h2>

  <%= link_to "Edit", edit_trip_path(@trip) , class: "link-button"%>
  <%= link_to "Delete", trip_path(@trip), method: :delete, data: {confirm: "Are you sure?"}, class: "link-button"%>
</div>
<div>

  <table>
    <tr>
      <th>Trip ID</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
    </tr>

    <tr>
      <td><%= link_to @trip.id, trip_path(@trip) %></td>
      <td><%= link_to @driver.name, driver_path(@driver) %></td>
      <td><%= link_to @passenger.name, passenger_path(@trip.passenger_id) %></td>
      <td><%= @trip.date %></td>
      <td><%= @trip.rating %></td>
      <td><%= @trip.cost %></td>
    </tr>

  </table>

</div>

<p><%= link_to "Return to Passenger List", passengers_path %></p>