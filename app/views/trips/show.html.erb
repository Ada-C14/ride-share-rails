

<% if @trip.rating.nil? == false %>
  <h4>Rating: <%= @trip.rating %></h4>
<% elsif @trip.rating.nil? && @trip.driver.available == true %>
  <h4>This trip has not been rated yet, would you like to add a rating?</h4>
  <%= form_for @trip do |f| %>
    <%= f.select :rating, [[1],[2],[3],[4],[5]] %>
    <%= f.submit "Add Rating" %>
  <% end %>
<% end %>

<h4>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver.id) %></h4>
<h4>Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %></h4>
<% if @trip.rating.nil? && @trip.driver.available == false %>
  <h5>**This trip is still in progress**</h5>
  <%= form_with model: @trip, class: 'complete-trip', url: passenger_passenger_complete_trip_path(@trip.id) do |f| %>
    <% f.submit "Complete Trip" %>
    <% @trip.complete_trip %>
  <% end %>
<% end %>

<section>
  <article>
    <h2>Trip ID: <%= @trip.id %></h2>
    <table class="driver-table">
        <tr>
          <th>Date</th>
          <th>Passenger</th>
          <th>Driver</th>
          <th>Cost</th>
          <th>Rating</th>
          <th>Note</th>
          <th>Edit</th>
        </tr>
        <tr>  
          <th><%= @trip.date %></th>

          <th>
            <% if @trip.passenger.isactive %>
              <%= link_to @trip.passenger.name, passenger_path(@trip.passenger_id) %>
            <% else %>  
              <%= @trip.passenger.name %>
            <% end %>  
          </th>

          <th>
            <% if @trip.driver.isactive %>
              <%= link_to @trip.driver.name, driver_path(@trip.driver_id) %>
            <% else %>  
              <%= @trip.driver.name %>
            <% end %>
          </th>

          <th>
            $ <%= @trip.cost / 100 %> 
            <%# sprintf to round to two deciaml places %>
          </th>

          <th>
            <% if @trip.rating.nil? %>
              <%= form_for @trip do |f| %>
                <%= f.select :rating, [1,2,3,4,5] %>
                <%= f.submit "Add Rating" %>
              <% end %>
            <% else %>  
              <%= @trip.rating %>
            <% end %>
          </th>
          
          <th>
            <% if @trip.rating.nil? %>
              This trip has not been rated by <%= @trip.passenger.name %>.
            <% end %> 
          </th>

          <th>
            <%= link_to "Edit", edit_trip_path(@trip) %> |
            <%= link_to "Delete", trip_path(@trip), method: :delete, data: {confirm: "Are you sure?"} %>
          </th>
        </tr>  
    </table>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
  </article>
</section>  



