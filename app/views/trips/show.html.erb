<h2>TRIP DETAILS</h2>

<div style="overflow-x:auto;">
<table id="trips">
  <tr>
    <th>Trip id</th>
    <th>Trip date</th>
    <th>Trip rating</th>
    <th>Trip cost</th>
    <th>Trip Driver Name</th>
    <th>Trip Passenger Name</th>
  </tr>
  <tr>
    <td><%= @trip.id %></td>
    <td><%= @trip.date %></td>
    <td><%= @trip.rating %></td>
    <td>$<%=  @trip.cost/100.00 %></td>
    <td><%= link_to @trip.driver.name, driver_path(@trip.driver_id) %></td>
    <td><%= link_to @trip.passenger.name, passenger_path(@trip.passenger_id) %></td>
  </tr>
</table>
</div>
<br>
<%= link_to "Edit Trip", edit_trip_path %>