<h3>Trip # <%= @trip.id %></h3>
<div class="perfil">
  <ul>
      <li>Date: <%= @trip.date.strftime("%m/%d/%Y") %></li>
      <li>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver_id) %></li>
      <li>Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger_id) %></li>
      <li>Price: <%= number_to_currency(@trip.cost) %></li>
      <li>Rating: <%= @trip.rating %></li>
      <li><button><%= link_to "Edit", edit_trip_path(@trip.id) %></button>
          <button><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Please confirm deletion." } %></button>
          <button> <%= link_to "Back", trips_path %></button>
      </li>
  </ul>
</div>