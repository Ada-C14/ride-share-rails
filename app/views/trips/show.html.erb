<h1>Trip #<%= @trip.id %> Details</h1>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Passenger</th>
    <th>Driver</th>
    <th>Price</th>
    <th>Rating</th>
<!--    <th>Edit</th>-->
<!--    <th>Delete</th>-->
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @trip.id%></td>
    <td><%= @trip.date %></td>
    <td><%= link_to @trip.passenger.name, passenger_path(@trip.passenger) %></td>
    <td><%= link_to @trip.driver.name, driver_path(@trip.driver) %></td>
    <td><%= number_to_currency(@trip.cost) %></td>
    <td>
      <% if @trip.rating.nil? %>
        <!--  <p>Rating: <%#= link_to "rate the trip", edit_trip_path(@trip) %></p>-->
        <%= form_with model: @trip do |f| %>
          <%= f.label :rating %>
          <%= f.select :rating, [1,2,3,4,5]%>

          <%= f.submit "Rate to Complete Trip" %>
        <% end %>
      <% else %>
        <%= @trip.rating %>
      <% end %>
    </td>
<!--    <td><%#= link_to "Edit", edit_trip_path(@trip) %></td>-->
<!--    <td><%#= link_to "Delete", trip_path(@trip), method: :delete, data: {confirm: "Are you sure?"} %></td>-->
  </tr>
  </tbody>
</table>
