<h1><%= @trip.id %></h1>
<p>Cost: <%= @trip.cost %></p>
<p>Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger) %></p>
<p>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver) %></p>
<p>Rating: <%= @trip.rating %></p>

<%= link_to "Edit", edit_trip_path(@trip) %>
<%= link_to "Delete", trip_path(@trip), method: :delete, data: {confirm: "Are you sure?"} %>

