<h2>TRIP DETAILS</h2>

<div style="overflow-x:auto;">
<table id="trips">
  <tr>
    <th>Trip id</th>
    <th>Trip date</th>
    <th>Trip rating</th>
    <th>Trip cost</th>
    <th>Trip Driver ID</th>
    <th>Trip Passenger ID</th>
  </tr>
  <tr>
    <td><%= @trip.id %></td>
    <td><%= @trip.date %></td>
    <td><%= @trip.rating %></td>
    <td> $0.00</td>
    <td><%= link_to @trip.driver.id, driver_path(@trip.driver_id) %></td>
    <td><%= link_to @trip.passenger.id, passenger_path(@trip.passenger_id) %></td>
  </tr>
</table>
</div>